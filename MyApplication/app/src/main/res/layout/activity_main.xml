<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projeto Leonardo Ciarcia"
        android:textSize="20sp"
        android:textColor="#3524c8"
        android:id="@+id/tv_topo"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite seu nome:"
        android:textSize="25sp"
        android:textColor="#B22CE3"
        android:id="@+id/tv_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_topo"
        android:layout_marginTop="20dp"
        />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Primeiro nome"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nome"
            android:id="@+id/et_nome"
        android:inputType="text"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Minimo 4 caracteres"
        android:textSize="20sp"
        android:textColor="#E32C2C"
        android:id="@+id/tv_nomeV"
        app:layout_constraintLeft_toRightOf="@id/et_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a nota da Prova1:"
        android:textSize="25sp"
        android:textColor="#B22CE3"
        android:id="@+id/tv_n1"
        app:layout_constraintTop_toBottomOf="@+id/et_nome"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 1"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_n1"
        android:id="@+id/et_n1"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Maior que 0 e menor que 10"
        android:textSize="20sp"
        android:textColor="#E32C2C"
        android:id="@+id/tv_n1V"
        app:layout_constraintLeft_toRightOf="@id/et_n1"
        app:layout_constraintTop_toBottomOf="@+id/tv_n1"
        android:layout_marginTop="17dp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a nota da Prova2:"
        android:textSize="25sp"
        android:textColor="#B22CE3"
        android:id="@+id/tv_n2"
        app:layout_constraintTop_toBottomOf="@+id/et_n1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 2"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_n2"
        android:id="@+id/et_n2"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Maior que 0 e menor que 10"
        android:textSize="20sp"
        android:textColor="#E32C2C"
        android:id="@+id/tv_n2V"
        app:layout_constraintLeft_toRightOf="@id/et_n2"
        app:layout_constraintTop_toBottomOf="@+id/tv_n2"
        android:layout_marginTop="17dp"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validar Dados"
        android:id="@+id/bt_01"
        app:layout_constraintTop_toBottomOf="@+id/et_n2"
        android:layout_marginTop="10dp"
        android:onClick="validar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#2C54E3"
        android:id="@+id/tv_resultado"
        app:layout_constraintTop_toBottomOf="@+id/bt_01"
        android:layout_marginTop="17dp"
        />

